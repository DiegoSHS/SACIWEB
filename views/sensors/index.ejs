<%- include('../layout/header2'); %>


    <br><br><br>

    <div class="container">
        <h1 class="m-2">Lista de sensores</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Valor máximo</th>
                    <th>Valor mínimo</th>
                    <th>Estado</th>
                    <th>Módulo</th>
                    <th>Pin</th>
                </tr>
            </thead>
            <tbody>
                <% let count = 1; %>
                    <% sensors.forEach(sensor => { %>
                        <tr>
                            <td>
                                <%= count %>
                            </td>
                            <td>
                                <%= sensor._id %>
                            </td>
                            <td>
                                <%= sensor.name %>
                            </td>
                            <td>
                                <%= sensor.description %>
                            </td>
                            <td>
                                <%= sensor.max %>
                            </td>
                            <td>
                                <%= sensor.min %>
                            </td>
                            <td>
                                <%= sensor.state %>
                            </td>
                            <td>
                                <%= sensor.module %>
                            </td>
                            <td>
                                <%= sensor.pin %>
                            </td>
                        </tr>
                        <% count++; %>
                            <% }); %>
            </tbody>
        </table>
    </div>

    <br>
    <%- include('../layout/footer2'); %>